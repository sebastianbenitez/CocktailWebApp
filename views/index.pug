extends layout

block styles
	link(rel="stylesheet", href="/stylesheets/index.css")

block scripts
	script(src="/javascripts/index.js")

block content
	div(id="main" class="container-fluid")
		div(class="container-fluid my-2")
			div(class="text-center w-100 p-3 bg-light")
				h1(class="display-4 font-weight-normal") Cocktail DB
				p Bringing recipes since march, 2020 
					i(class="fas fa-cocktail")
		
		div(class="container-fluid mb-3")
			div(class="text-center w-100 p-4 bg-white")
				h2(class="display-5 font-weight-normal")= cocktail.strDrink
				br
				table(class="table table-striped")
					thead
						tr(class="table-warning")
							th Ingredient
							th Measure
					tbody
						- var i = 1
						while i < 16
							if cocktail['strIngredient'+i]
								tr
									td= cocktail['strIngredient'+i]
									td= cocktail['strMeasure'+i]
							- i++
						tr
							th(colspan="2" class="table-warning") Preparation
						tr
							td(colspan="2")= cocktail.strInstructions	
				br
				img(id="imgCocktail" class="d-none d-lg-block m-auto" src=cocktail.strDrinkThumb)
		

